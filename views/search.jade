extends layout

block content
    .container
        .row
            h1 Search users
            
            each user in users
                .col-md-2
                    a(href='users/view/'+ user.username)
                        img.img-thumbnail(src='/images/profile/' + user.profile_picture)
                    .title.network-name #{user.name}
            
    .container
        .row
            h1 Search books
            - var i = 0;
            each item in books
                if i === 6
                    .row 
                    - i = 0;
                .col-md-2
                    a(href='/book/'+ item._id)
                        img.img-thumbnail(src='/images/books/' + item._id + '.jpg')
                    .title.network-name #{item.title}
                    - i++

                
            
    .container
        .row
            h1 Search author
            
            each author in authors
                .col-md-2
                    a(href='/author/'+ author._id)
                        img.img-thumbnail(src='/images/authors/' + author._id + '.jpg')
                    .title.network-name #{author.name}
        