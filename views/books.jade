extends layout

block content         
    .container
        .row.search-result
            h1 Popular books
            - var i = 0;
            each item in books
                if i === 6
                    .row 
                    - i = 0;
                .col-md-2
                    a(href='/book/'+ item._id._id)
                        img.img-thumbnail(src='/images/books/' + item._id._id + '.jpg')
                    .currently-reading #{item.count} People reading
                    .title.network-name.popular-book-title #{item._id.title}
                    - i++

                    
        